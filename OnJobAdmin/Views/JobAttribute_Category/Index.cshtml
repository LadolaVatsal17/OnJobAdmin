@model AdminEntity.AdminModel.Admin
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

@if (@TempData["Message"] != null)
{
    <script type="text/javascript">
    $(document).ready(function () {

        if ('@TempData["Message"]' == "1") {
            toastr.success("Category Status is Changed!!");
        } else if ('@TempData["Message"]' == "2") {
            toastr.success("Update Successfull!!");
        } else if ('@TempData["Message"]' == "3") {
            toastr.error("Update Faild!!");
        } else if ('@TempData["Message"]' == "4") {
            toastr.success("Category Add Successfull!!");
        } else if('@TempData["Message"]' == "5"){
            toastr.error("Category Add Faild!! or Already Added");
        }
        else
        {
            toastr.error("Category is Not Disable!!");
        }
    });
    </script>
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
        </div>
        <div class="col-md-12">
            <div class="box box-body">
                <div class="col-md-6">
                    <h4><i class="fa fa-list"></i> &nbsp; Category List</h4>
                </div>
                <div class="col-md-6 text-right">
                    <a href="/JobAttribute_Category/AddCategory" class="btn btn-success"><i class="fa fa-plus"></i> Add New Categpory</a>
                </div>
            </div>
        </div>
    </div>

    <div class="box">
        <div class="box-body table-responsive">
            <table id="example1" class="table table-bordered table-striped" width="100%">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Category</th>
                      
                        <th style="width: 150px;" class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstCategory)
                    {
                        counter++;
                        <tr>
                            <td>@counter</td>
                            <td>@item.cat_name</td>
                           
                            <td style="float:right">
                                <a href="javascript:void(0)" data-usr_id="@item.cat_id" id="category_edit" class="btn btn-primary">
                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                </a>
                                @if (item.Is_active == 1)
                                {
                                    <a href="javascript:void(0)" data-usr_id="@item.cat_id" data-flg="@item.Is_active" id="category_delete" class="btn btn-success" type="button">
                                        <i class="fa fa-unlock" aria-hidden="true"></i>
                                    </a>

                                }
                                else
                                {
                                    <a href="javascript:void(0)" data-usr_id="@item.cat_id" data-flg="@item.Is_active" id="category_delete" class="btn btn-danger" type="button">
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<script type="text/javascript">

    $("#category_delete").click(function (e)
    {
        flg = $(this).data('flg');
        if (flg == "1")
        {
            val = $(this).data('usr_id');
            e.preventDefault();
            swal({
                title: "Want to Disable ?",
                text: "",
                type: "info",
                showCancelButton: true,
                cancelButtonClass: 'btn-secondary waves-effect',
                confirmButtonClass: 'btn-success waves-effect waves-light',
                confirmButtonText: "Yes",
                closeOnConfirm: false
            },
                function () {
                    $.ajax(
                        {
                            url: '@Url.Action("CategoryDisable", "JobAttribute_Category")',
                            data: { id: val },
                            type: "POST"
                        })
                        .done(function (data) {
                            sweetAlert
                                ({
                                    title: "Disable!",
                                    text: "Disable was successfully !",
                                    type: "success",
                                     timer: 1000,
                                    showConfirmButton: false
                                },
                                function () {
                                     window.location.href = '/JobAttribute_Category/Index';
                                });
                        })
                        .error(function (data) {
                            swal("Oops", "We couldn't connect to the server!", "error");
                        });
                });
        } else {
            val = $(this).data('usr_id');
            e.preventDefault();
            swal({
                title: "Want to enable ?",
                text: "",
                type: "info",
                showCancelButton: true,
                cancelButtonClass: 'btn-secondary waves-effect',
                confirmButtonClass: 'btn-success waves-effect waves-light',
                confirmButtonText: "Yes",
                closeOnConfirm: false
            },
                function () {
                    $.ajax(
                        {
                            url: '@Url.Action("CategoryDisable", "JobAttribute_Category")',
                            data: { id: val },
                            type: "POST"

                        })
                        .done(function (data) {
                            sweetAlert
                                ({
                                    title: "Enable!",
                                    text: "Enable was successfully !",
                                    type: "success",
                                    timer: 1000,
                                    showConfirmButton: false
                                },
                                    function () {

                                        window.location.href = '/JobAttribute_Category/Index';
                                    });

                        })
                        .error(function (data) {
                            swal("Oops", "We couldn't connect to the server!", "error");
                        });
                });
        }
    });

       $(document).on('click', '#category_edit', function () {
        debugger;
        var Id = $(this).data('usr_id');
        window.location.href = "@Url.Action("UpdateCategory", "JobAttribute_Category", new {id = "Id"})".replace("Id", Id);
    });


</script>

<script>
    $(function () {
        $('#example1').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": true,
        });
    });
</script>