@model AdminEntity.AdminModel.Admin

@if (@TempData["Message"] != null)
{
    <script type="text/javascript">
        $(document).ready(function ()
        {

        if ('@TempData["Message"]' == "1") {
            toastr.error("User Not Found!!");
        }
        else
        {
            toastr.success("Login Sucessfully!!");
        }
    });
    </script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login - OnJob</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Content/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Content/assets/dist/css/style.css">
    <script src="~/Content/assets/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script src="~/Content/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/dist/js/app.min.js"></script>
</head>
<body id="login-form">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                <div class="login-title">
                    <h3><span>OnJob Portal</span></h3>
                </div>
                @using (Html.BeginForm("ForgotPassword", "Login")) //Method name , Controler Name
                {
                    @Html.AntiForgeryToken()
                    <div class="form-box">
                        <div class="caption">
                            <h4>Forgot Password</h4>
                        </div>
                        <div class="input-group">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            &nbsp;  
                            <input type="submit" name="submit" id="submit" class="form-control btn btn-success" value="Send Mail">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>