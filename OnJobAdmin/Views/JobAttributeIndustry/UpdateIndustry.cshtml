@model AdminEntity.AdminModel.Industry
@{
    ViewBag.Title = "Update industry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-body">
                <div class="col-md-6">
                    <h4><i class="fa fa-pencil"></i> &nbsp; Edit Industry</h4>
                </div>
                <div class="col-md-6 text-right">
                    <a href="/JobAttributeIndustry/Index" class="btn btn-success"><i class="fa fa-list"></i>  Industry List</a>
                    <a href="/JobAttributeIndustry/AddIndustry" class="btn btn-success"><i class="fa fa-plus"></i> Add New Industry</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Industry</h3>
                </div>
                @using (Html.BeginForm("UpdateIndustry", "JobAttributeIndustry", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="form-group">
                            <label for="job_type_name" class="col-sm-2 control-label">Industry Name</label>
                            <div class="col-sm-9">
                                <input type="hidden" name="ind_id" value="@Model.ind_id" class="form-control" id="firstname" placeholder="">
                                <input type="text" name="industry_name" value="@Model.industry_name" class="form-control" id="firstname" placeholder="Industry Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-11">
                                <input type="submit" name="submit" value="Update Industry" class="btn btn-info pull-right">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>